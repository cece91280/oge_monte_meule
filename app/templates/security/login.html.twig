{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% include 'partials/_header.html.twig' %}

    <div class="login-page">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="login-card">
            <h1 class="login-title">Connexion</h1>

            {% if app.user %}
                <div class="already-logged">
                    Vous êtes déjà connecté en tant que {{ app.user.email }}.
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <form method="post" class="login-form">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username|default('') }}" name="email" id="inputEmail" class="form-input" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-input" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn-primary">Se connecter</button>
            </form>

            <div class="login-links">
                <a href="{{ path('app_register') }}">Inscription</a>
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
            </div>
        </div>
    </div>

    {% include 'partials/_footer.html.twig' %}
{% endblock %}